{
  "name": "Colorfy",
  "description": "Extension used to change background color for the element selected on a web page.",
  "version": "0.9.1",
  "manifest_version": 2,
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  },
  "web_accessible_resources": ["images/*", "colorfy.css"],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*/*"
      ],
      "js": [
        "backend.js"
      ],
      "css" : ["colorfy.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  
  "options_page": "options/options.html"
}