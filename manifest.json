{
  "name": "Colorfy",
  "description": "Extention for changing element color",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*/*"
      ],
      "js": [
        "backend.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  
  "options_page": "options/options.html"
}