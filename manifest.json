{
  "name": "Colorfy",
  "description": "__MSG_description__",
  "version": "0.9.3.7",
  "author": "Nikola MandiÄ‡",
  "manifest_version": 3,
  "default_locale": "en",
  "icons": {
    "16": "logo_16.png",
    "32": "logo_32.png",
    "64": "logo_64.png",
    "128": "logo_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "colorfy.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "incognito": "spanning",
  "content_scripts": [
    {
      "matches": ["*://*/*", "file://*/*"],
      "all_frames": true,
      "js": ["backend.js"],
      "css": ["colorfy.css"]
    }
  ],
  "permissions": ["activeTab", "contextMenus", "storage"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
