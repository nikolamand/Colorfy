{
    "name": "Colorfy",
    "description" : "Extention for changing element color",
    "version": "0.0.1",
    "manifest_version": 2,
    "icons": { "128": "icon_128.png"},
    "browser_action": {
        "default_icon": "icon.png"
        // "default_popup": "popup.html"
    },
    "background" : {
      "scripts" : ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "*://*/*",
            "file://*/*"
          ],
        "js": ["backend.js"]
      }],
    "permissions": ["activeTab"]
}