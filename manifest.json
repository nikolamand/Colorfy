{
  "name": "Colorfy",
  "description": "__MSG_description__",
  "version": "0.9.2",
  "author": "Nikola MandiÄ‡",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  },
  "web_accessible_resources": ["images/*", "colorfy.css"],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "incognito": "spanning",
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*/*"
      ],
      "all_frames": true,
      "js": [
        "backend.js"
      ],
      "css" : ["colorfy.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  
  "options_page": "options/options.html"
}